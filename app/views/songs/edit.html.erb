<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @Song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="field_with_errors">
  <input type="text" name="song[title]" id="song_title" value="Existing Song Title"/>
</div>

<h2>Song Form</h2>
<%=form_for @song do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :released %>
  <%= f.check_box :released %>
  <%= f.label :release_year %>
  <%= f.number_field :release_year %>
  <%= f.label :artist_name%>
  <%= f.text_field :artist_name%>
  <%= f.label :genre%>
  <%= f.text_field :genre%>


  <%=f.submit%>
  <%end%>
